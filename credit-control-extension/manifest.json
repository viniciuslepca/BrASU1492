{
  "name": "Credit Control Extension",
  "description": "This is the Nubank Chrome extension, which helps you have more control over your online purchases.",
  "version": "1.0",
  "manifest_version": 2,
  "icons": { "16": "images/icon16.png", "48": "images/icon48.png", "128": "images/icon128.png" },
  "content_scripts": [
    {
      "matches": ["*://*.amazon.com/*buy*"],
      "js": ["js/content.js"]
    }
  ],
  "browser_action": {
    "default_popup": "html/popup.html",
    "default_title": "Nubank Credit Control"
  },
  "background": {
    "scripts": ["js/background.js"]
  },
  "permissions": ["notifications"],
  "minimum_chrome_version": "46",
  "content_security_policy": "script-src 'self' 'sha256-hmMd/FdixRZj3+ijA+2p6YPmboyDLwHwaGhd44SPYT8='; object-src 'self'"
}